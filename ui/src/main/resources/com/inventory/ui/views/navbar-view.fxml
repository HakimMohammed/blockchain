<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.inventory.ui.controllers.NavbarController"
      styleClass="navbar"
      spacing="20"
      alignment="CENTER">

    <ImageView fitWidth="100" preserveRatio="true" styleClass="logo">
        <Image url="@../assets/images/app-logo.png"/>
    </ImageView>

    <TextField fx:id="searchField"
               promptText="Search products..."
               styleClass="search-box"
               HBox.hgrow="ALWAYS"/>

    <Button fx:id="notificationsButton"
            styleClass="circle-button,flat-button"/>

    <Button fx:id="profileButton"
            styleClass="circle-button,flat-button"/>

    <Button fx:id="logoutButton"
            styleClass="circle-button,flat-button"/>

</HBox>